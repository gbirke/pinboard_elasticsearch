{
  "mappings": {
    "_doc": {
      "dynamic": false,
      "properties": {
        "description": {
          "type": "text"
        },
        "extended": {
          "type": "text"
        },
        "tags": {
          "type": "text",
          "fields": {
            "cnt": {
              "type": "token_count",
              "store": true,
              "analyzer": "standard"
            }
          }
        },
        "href": {
          "type": "text"
        },
        "toread": {
          "type": "boolean"
        },
        "shared": {
          "type": "boolean"
        },
        "hash": {
          "type": "text",
          "index": false
        },
        "meta": {
          "type": "text",
          "index": false
        },
        "time": {
          "type": "date",
          "format": "date_time_no_millis"
        }
      }
    }
  }
}
