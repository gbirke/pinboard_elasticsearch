{
  "settings": {
    "analysis": {
      "analyzer": {
        "hostname_analyzer": {
          "tokenizer": "hostname_tokenizer"
        }
      },
      "tokenizer": {
        "hostname_tokenizer": {
          "type": "pattern",
          "pattern": "^([a-z]+:)?//([^/:]+).*$",
          "group": 1
        }
      }
    }
  },
  "mappings": {
    "_doc": {
      "dynamic": false,
      "properties": {
        "description": {
          "type": "text"
        },
        "extended": {
          "type": "text"
        },
        "tags": {
          "type": "text",
          "fields": {
            "cnt": {
              "type": "token_count",
              "store": true,
              "analyzer": "standard"
            }
          }
        },
        "href": {
          "type": "text",
          "fields": {
            "hostname": {
              "type": "text",
              "store": true,
              "analyzer": "hostname_analyzer"
            }
          }
        },
        "toread": {
          "type": "boolean"
        },
        "shared": {
          "type": "boolean"
        },
        "hash": {
          "type": "text",
          "index": false
        },
        "meta": {
          "type": "text",
          "index": false
        },
        "time": {
          "type": "date",
          "format": "date_time_no_millis"
        }
      }
    }
  }
}
